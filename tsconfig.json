{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./lib",
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["node", "mocha"]
  },
  "include": ["src/**/*.ts"]
}
