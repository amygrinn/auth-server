{
  "name": "@tygr/auth-server",
  "version": "0.0.3-beta",
  "description": "Authentication middleware for tygr",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "eslintConfig": {
    "extends": [
      "alloy",
      "alloy/typescript"
    ],
    "plugins": [
      "chai-friendly"
    ],
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "eol-last": [
        "error",
        "always"
      ],
      "max-params": [
        "error",
        4
      ],
      "@typescript-eslint/no-unused-expressions": 0
    },
    "ignorePatterns": [
      "lib/*"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "nodemonConfig": {
    "watch": [
      "demo",
      "lib"
    ],
    "ext": "ts,js",
    "exec": "npm run serve",
    "delay": 1
  },
  "mocha": {
    "spec": "demo/tests/**/*.spec.ts",
    "require": [
      "ts-node/register",
      "dotenv/config"
    ]
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsc",
    "build:w": "npm run build -- -w",
    "serve": "ts-node -r dotenv/config demo",
    "serve:w": "nodemon",
    "start": "npm-run-all build -p build:w serve:w",
    "test": "cross-env NODE_ENV=test mocha",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint": "npm run lint:fix",
    "prettier:check": "prettier -c .",
    "prettier:fix": "prettier --write .",
    "prettier": "npm run prettier:fix",
    "quality:check": "run-s --print-label --silent lint:check prettier:check",
    "quality:fix": "run-p --print-label --silent lint:fix prettier:fix",
    "quality": "npm run quality:fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tylergrinn/tygr-auth-server.git"
  },
  "keywords": [
    "express",
    "login",
    "passport"
  ],
  "author": "Tyler Grinn",
  "license": "ISC",
  "peerDependencies": {
    "express": "4"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "express-session": "^1.17.1",
    "oauth-1.0a": "^2.2.6",
    "passport": "^0.4.1",
    "passport-github2": "^0.1.12",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.14",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.9",
    "@types/express-session": "^1.17.3",
    "@types/mocha": "^8.0.4",
    "@types/passport": "^1.0.4",
    "@types/passport-github2": "^1.2.4",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/passport-local": "^1.0.33",
    "@types/passport-twitter": "^1.0.36",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.9.0",
    "eslint-config-alloy": "^3.8.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "express": "^4.17.1",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "prettier-plugin-organize-imports": "^1.1.1",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "supertest-session": "^4.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "uuid": "^8.3.1"
  }
}
